{
  "name": "knowledge_graph",
  "displayName": "Knowledge Graph",
  "version": "1.0.0",
  "description": "Visualizes data relationships as an interactive graph showing how records are connected via foreign keys",
  "category": "Data Management",
  "enabled": true,
  "requiresHana": false,
  "author": "P2P Development Team",
  "structure": {
    "backend": "backend/",
    "tests": "tests/",
    "docs": "docs/"
  },
  "backend": {
    "blueprint": "modules.knowledge_graph.backend:knowledge_graph_api",
    "mount_path": "/api/knowledge-graph"
  },
  "api": {
    "baseUrl": "/api/knowledge-graph",
    "endpoints": [
      {
        "path": "/",
        "method": "GET",
        "description": "Get knowledge graph of data relationships",
        "parameters": [
          {
            "name": "source",
            "type": "string",
            "required": false,
            "default": "sqlite",
            "description": "Data source (sqlite or hana)"
          },
          {
            "name": "max_records",
            "type": "integer",
            "required": false,
            "default": 20,
            "description": "Maximum records per table to analyze"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "python": ["sqlite3"],
    "modules": ["sqlite_connection", "hana_connection"]
  },
  "frontend": {
    "entry_point": "frontend/knowledgeGraphPage.js",
    "components": [
      "frontend/knowledgeGraphPage.js"
    ],
    "deploy_to": "modules/knowledge_graph",
    "lazy_load": false
  }
}
