<mvc:View
    controllerName="p2p.dataproducts.controller.DataProducts"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:card="sap.f.cards">
    
    <Page
        id="dataProductsPage"
        title="Data Products Catalog"
        showNavButton="false"
        class="sapUiResponsiveContentPadding">
        
        <customHeader>
            <f:ShellBar
                id="shellBar"
                title="P2P Data Products"
                secondTitle="SAPUI5 + Fiori Horizon"
                showNavButton="false"
                showCopilot="false"
                showSearch="true"
                showNotifications="true"
                notificationsNumber="3"
                showProductSwitcher="false">
                <f:profile>
                    <f:Avatar initials="UI" />
                </f:profile>
                <f:menu>
                    <Menu>
                        <MenuItem text="Data Products" press=".onNavToDataProducts" />
                        <MenuItem text="Explorer" press=".onNavToExplorer" />
                        <MenuItem text="HANA Connection" press=".onNavToHanaConnection" />
                    </Menu>
                </f:menu>
            </f:ShellBar>
        </customHeader>
        
        <content>
            <VBox class="sapUiSmallMargin">
                <Title
                    text="Data Products Catalog"
                    level="H1"
                    class="sapUiSmallMarginBottom" />
                <Text
                    text="Browse and explore P2P data products - Real SAPUI5 Components"
                    class="sapUiSmallMarginBottom" />
                
                <grid:CSSGrid
                    id="dataProductsGrid"
                    gridTemplateColumns="repeat(auto-fill, minmax(20rem, 1fr))"
                    gridGap="1rem"
                    class="sapUiSmallMarginTop"
                    items="{/dataProducts}">
                    
                    <f:Card class="sapUiSmallMargin" width="100%">
                        <f:header>
                            <card:Header
                                title="{name}"
                                subtitle="{subtitle}"
                                iconSrc="{icon}"
                                iconDisplayShape="Circle" />
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text
                                    text="{description}"
                                    class="sapUiTinyMarginBottom"
                                    maxLines="3" />
                                <HBox justifyContent="SpaceBetween" class="sapUiTinyMarginTop">
                                    <ObjectStatus
                                        text="{type}"
                                        state="{= ${type} === 'Master Data' ? 'Information' : 'Success'}" />
                                    <ObjectStatus
                                        text="{tablesCount} Tables"
                                        state="None" />
                                </HBox>
                                <ObjectStatus
                                    text="{samplesCount} Samples"
                                    state="Success"
                                    class="sapUiTinyMarginTop" />
                                <HBox width="100%" justifyContent="SpaceBetween" class="sapUiSmallMarginTop">
                                    <Button
                                        text="View CSN"
                                        type="Default"
                                        icon="sap-icon://document"
                                        press=".onViewCSN"
                                        customData:productId="{id}"
                                        xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" />
                                    <Button
                                        text="View Details"
                                        type="Emphasized"
                                        press=".onViewProduct"
                                        customData:productId="{id}"
                                        xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" />
                                </HBox>
                            </VBox>
                        </f:content>
                    </f:Card>
                </grid:CSSGrid>
            </VBox>
        </content>
        
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Text text="P2P Data Products v3.0 â€¢ SAPUI5 + Fiori Horizon" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
