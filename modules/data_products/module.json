{
  "id": "data-products",
  "name": "Data Products Viewer",
  "version": "1.0.0",
  "description": "SAP HANA Cloud Data Products browser and query interface with CSN support",
  "category": "Business Logic",
  "author": "P2P Development Team",
  "created": "2026-01-24",
  "status": "active",
  "dependencies": [],
  "provides": {
    "services": [
      {
        "name": "DataProductsAPI",
        "description": "Browse and query HANA Cloud data products",
        "class": "DataProductsAPI",
        "file": "frontend/dataProductsAPI.js"
      }
    ]
  },
  "configuration": {
    "base_url": {
      "type": "string",
      "default": "http://localhost:5000",
      "description": "Backend API base URL"
    },
    "cache_ttl": {
      "type": "number",
      "default": 60000,
      "description": "Cache time-to-live in milliseconds"
    }
  },
  "features": {
    "list_data_products": "List all installed data product schemas",
    "browse_tables": "Browse tables within data products",
    "table_structure": "View column definitions and metadata",
    "query_data": "Query table data with filters",
    "csn_support": "Parse and display CSN definitions",
    "metadata_extraction": "Extract product metadata from schema names",
    "caching": "Intelligent caching with TTL",
    "connection_test": "Test backend connectivity"
  },
  "api": {
    "methods": [
      "listDataProducts()",
      "getTables(schemaName)",
      "getTableStructure(schemaName, tableName)",
      "queryTable(schemaName, tableName, options)",
      "getDataProductMetadata(schemaName)",
      "getCSNDefinition(schemaName)",
      "parseCSNEntities(csn)",
      "formatCSNField(fieldName, fieldDef)",
      "clearCache()",
      "getCacheStats()",
      "testConnection()"
    ]
  },
  "files": {
    "frontend": [
      "frontend/dataProductsAPI.js"
    ],
    "tests": [
      "tests/dataProductsAPI.test.js"
    ],
    "docs": [
      "README.md"
    ]
  },
  "integration": {
    "import": "import { DataProductsAPI } from './modules/data_products/frontend/dataProductsAPI.js';",
    "usage": "const api = new DataProductsAPI(); const products = await api.listDataProducts();"
  },
  "use_cases": [
    "Browse SAP HANA Cloud data products",
    "Explore P2P data models",
    "Query supplier, invoice, purchase order data",
    "View CSN schema definitions",
    "Build data exploration interfaces",
    "Create custom data viewers"
  ],
  "backend_endpoints": [
    "GET /api/data-products",
    "GET /api/data-products/:schema/tables",
    "GET /api/data-products/:schema/:table/structure",
    "POST /api/data-products/:schema/:table/query",
    "GET /api/data-products/:schema/csn",
    "GET /api/health"
  ],
  "tags": [
    "data-products",
    "hana",
    "sap",
    "p2p",
    "csn",
    "business-logic"
  ],
  "enabled": true,
  "structure": {
    "backend": "backend/",
    "frontend": "frontend/"
  },
  "backend": {
    "type": "api",
    "module_path": "modules.data_products.backend",
    "blueprint": "modules.data_products.backend:data_products_api",
    "mount_path": "/api/data-products"
  },
  "frontend": {
    "deploy_to": "modules/data_products"
  }
}
