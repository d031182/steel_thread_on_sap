{
  "id": "ai_assistant",
  "name": "AI Assistant",
  "version": "1.0.0",
  "description": "Conversational AI assistant with Pydantic AI + Groq",
  "category": "infrastructure",
  "enabled": true,
  "eager_init": true,
  "backend": {
    "blueprint": "modules.ai_assistant.backend:blueprint",
    "mount_path": "/api/ai-assistant",
    "dependencies": ["pydantic-ai", "pydantic-ai[groq]"],
    "database_paths": {
      "p2p_data": "database/p2p_data.db",
      "p2p_graph": "database/p2p_graph.db",
      "conversations": "database/ai_assistant_conversations.db"
    }
  },
  "frontend": {
    "page_name": "ai-assistant",
    "nav_title": "AI Assistant",
    "nav_icon": "sap-icon://collaborate",
    "show_in_navigation": false,
    "scripts": [
      "/modules/ai_assistant/frontend/adapters/AIAssistantAdapter.js?v=20260214",
      "/modules/ai_assistant/frontend/views/AIAssistantOverlay.js?v=20260214",
      "/modules/ai_assistant/frontend/module.js?v=20260214"
    ],
    "styles": [],
    "entry_point": {
      "factory": "AIAssistantModule"
    }
  },
  "dependencies": {
    "required": [],
    "optional": ["ILogger"]
  },
  "api_endpoints": [
    {
      "path": "/api/ai-assistant/chat",
      "method": "POST",
      "description": "Send message to AI assistant (legacy, auto-creates conversation)"
    },
    {
      "path": "/api/ai-assistant/chat/stream",
      "method": "POST",
      "description": "Streaming chat with Server-Sent Events (SSE)"
    },
    {
      "path": "/api/ai-assistant/conversations",
      "method": "POST",
      "description": "Create new conversation session"
    },
    {
      "path": "/api/ai-assistant/conversations/<id>",
      "method": "GET",
      "description": "Get conversation history by ID"
    },
    {
      "path": "/api/ai-assistant/conversations/<id>/messages",
      "method": "POST",
      "description": "Send message in existing conversation"
    },
    {
      "path": "/api/ai-assistant/conversations/<id>",
      "method": "DELETE",
      "description": "Delete conversation by ID"
    },
    {
      "path": "/api/ai-assistant/conversations/<id>/context",
      "method": "GET",
      "description": "Get conversation context and summary"
    },
    {
      "path": "/api/ai-assistant/sql/execute",
      "method": "POST",
      "description": "Execute SQL query with validation (Phase 4.5)"
    },
    {
      "path": "/api/ai-assistant/health",
      "method": "GET",
      "description": "Health check with statistics"
    }
  ],
  "configuration": {
    "groq_model": "llama-3.3-70b-versatile",
    "max_conversation_length": 20,
    "response_timeout": 30
  }
}