{
  "id": "debug-mode",
  "name": "Debug Mode",
  "version": "1.0.0",
  "description": "Enhanced debugging with verbose logging and performance tracking for development",
  "category": "Developer Tools",
  "author": "P2P Development Team",
  "created": "2026-01-24",
  "status": "active",
  "dependencies": [],
  "provides": {
    "services": [
      {
        "name": "DebugLogger",
        "description": "Conditional debug logger with localStorage persistence",
        "class": "DebugLogger",
        "file": "frontend/debugLogger.js"
      }
    ]
  },
  "configuration": {
    "enabled_by_default": {
      "type": "boolean",
      "default": false,
      "description": "Whether debug mode is enabled by default"
    },
    "storage_key": {
      "type": "string",
      "default": "debugMode",
      "description": "localStorage key for state persistence"
    }
  },
  "features": {
    "conditional_logging": "Logs only output when enabled",
    "localStorage_persistence": "State persists across page reloads",
    "function_tracing": "Entry/exit logging with performance tracking",
    "error_logging": "Enhanced error logging with stack traces",
    "performance_timers": "Built-in performance measurement",
    "object_inspection": "Deep object inspection with console.table",
    "grouped_logging": "Group related logs together",
    "colored_output": "Color-coded console output for readability"
  },
  "api": {
    "methods": [
      "isEnabled()",
      "enable()",
      "disable()",
      "toggle()",
      "log(message, data)",
      "entry(functionName, params)",
      "exit(functionName, result, startTime)",
      "error(functionName, error)",
      "startTimer()",
      "endTimer(label, startTime)",
      "inspect(label, obj)",
      "table(label, data)",
      "group(groupName)",
      "groupEnd()"
    ]
  },
  "files": {
    "frontend": [
      "frontend/debugLogger.js"
    ],
    "tests": [
      "tests/debugLogger.test.js"
    ],
    "docs": [
      "README.md"
    ]
  },
  "integration": {
    "import": "import { debugLogger } from './modules/debug_mode/frontend/debugLogger.js';",
    "usage": "debugLogger.enable(); debugLogger.log('Debug message', data);"
  },
  "tags": [
    "debugging",
    "development",
    "logging",
    "performance",
    "developer-tools"
  ],
  "enabled": true
}